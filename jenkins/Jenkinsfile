pipeline {
  agent any
  stages {
    stage('Clone Repo') {
      steps {
        git 'https://github.com/Seetharamj/Devops_Project-.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t myapp-image ./docker'
      }
    }

    stage('Deploy with Docker Compose') {
      steps {
        sh 'docker-compose -f ./docker/docker-compose.yml up -d'
      }
    }
  }
}
